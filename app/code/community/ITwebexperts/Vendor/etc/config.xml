<?xml version="1.0"?>
<config>
    <modules>
        <ITwebexperts_Vendor>
            <version>1.0.7</version>
        </ITwebexperts_Vendor>
    </modules>
    <frontend>
        <routers>
            <vendor>
                <use>standard</use>
                <args>
                    <module>ITwebexperts_Vendor</module>
                    <frontName>vendor</frontName>
                </args>
            </vendor>
        </routers>
        <layout>
            <updates>
                <payperrentals>
                    <file>vendor.xml</file>
                </payperrentals>
            </updates>
        </layout>
    </frontend>
    <admin>
        <routers>
            <vendor_admin>
                <use>admin</use>
                <args>
                    <module>ITwebexperts_Vendor</module>
                    <frontName>vendor_admin</frontName>
                </args>
            </vendor_admin>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <vendor>
                    <file>vendor.xml</file>
                </vendor>
            </updates>
        </layout>
    </adminhtml>
    <global>
        <blocks>
            <vendor>
                <class>ITwebexperts_Vendor_Block</class>
            </vendor>
            <catalog>
            	<rewrite>
            		<layer_view>ITwebexperts_Vendor_Block_Layer_View</layer_view>
            	</rewrite>
            </catalog>
        </blocks>
        <models>
            <vendor>
                <class>ITwebexperts_Vendor_Model</class>
                <resourceModel>vendor_resource</resourceModel>
            </vendor>
            <vendor_resource>
                <class>ITwebexperts_Vendor_Model_Resource</class>
                <entities>
                    <gallery>
                        <table>vendor_gallery</table>
                    </gallery>
                    <message>
                    	<table>vendor_message</table>
                    </message>
                    <postcode>
                    	<table>vendor_postcode</table>
                    </postcode>
                    <shippingrate>
                    	<table>vendor_shipping_rate</table>
                    </shippingrate>
                </entities>
            </vendor_resource>
            <customer_resource>
                <rewrite>
                    <customer>ITwebexperts_Vendor_Model_Resource_Rewrite_Customer</customer>
                </rewrite>
            </customer_resource>
            <checkout>
                <rewrite>
                    <type_onepage>ITwebexperts_Vendor_Model_Rewrite_Checkout_Type_Onepage</type_onepage>
                </rewrite>
            </checkout>
        </models>
        <resources>
            <vendor_setup>
                <setup>
                    <module>ITwebexperts_Vendor</module>
                    <class>Mage_Customer_Model_Resource_Setup</class>
                </setup>
            </vendor_setup>
        </resources>
        <helpers>
            <vendor>
                <class>ITwebexperts_Vendor_Helper</class>
            </vendor>
        </helpers>
        <template>
            <email>
                <quote_request_processed_email_template module="vendor">
                    <label>Vendor message email</label>
                    <file>vendor_message.html</file>
                    <type>html</type>
                </quote_request_processed_email_template>
            </email>
        </template>	
    </global>
    <default>
    	<carriers>
    		<vendor>
                <active>1</active>
                <sallowspecific>0</sallowspecific>
                <model>vendor/carrier_vendor</model>
                <name>Vendor</name>
                <price>5.00</price>
                <title>Vendor</title>
                <specificerrmsg>This shipping method is currently unavailable. If you would like to ship using this shipping method, please contact us.</specificerrmsg>
                <handling_type>F</handling_type>
            </vendor>
    	</carriers>
    </default>
</config>